<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="7.5dp"
    android:background=" #fff ">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_marginRight="7.5dp"
            android:background="#fff"
            android:id="@+id/post_image"
            android:src="@mipmap/ww"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
            android:id="@+id/post_hos_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hospital name"
            android:layout_marginRight="30dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Widget.Switch"/>
        <TextView
            android:id="@+id/post_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>
        </LinearLayout>
        </LinearLayout>
    <TextView
        android:id="@+id/post_doc_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textAppearance="@style/Base.TextAppearance.AppCompat"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/post_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textAppearance="@style/Base.TextAppearance.AppCompat"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/post_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Notification Body"
        android:textAppearance="@style/Base.TextAppearance.AppCompat"
        android:layout_marginTop="5dp"/>
</LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#E44F38" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_favorite_border_black_24dp"
            android:paddingLeft="20dp"
            android:id="@+id/post_num_cares"
            android:textStyle="bold"
            android:textColor="#E44F38"
            android:background=" #fff "/>
        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="#E44F38" />
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/post_update"
            android:drawableLeft="@drawable/ic_update_black_24dp"
            android:paddingLeft="20dp"
            android:textColor="#E44F38"
            android:background=" #fff "
            android:text="@string/Update"
            android:paddingRight="20dp"
            android:textStyle="bold"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="#E44F38" />
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/post_delete"
            android:drawableLeft="@drawable/ic_delete_forever_black_24dp"
            android:paddingLeft="20dp"
            android:textColor="#E44F38"
            android:background=" #fff "
            android:text="@string/Delete"
            android:textStyle="bold"
            />
    </LinearLayout>
</LinearLayout>